---
import Layout from "../../layouts/Layout.astro";
import { Icon } from 'astro-icon'

---

<Layout title="Contact Us" >
  
<!-- Automatically fetches and inlines Material Design Icon's "account" SVG -->

<!-- Equivalent shorthand -->

    <div class="py-24">
        <div class="grid lg:grid-cols-2 grid-cols-1 lg:w-4/6 w-5/6 mx-auto">
          <div class="lg:mb-0 mb-12">
            <h4 class=" font-bold lg:text-6xl text-4xl">Send a Message</h4>
            <div class="lg:mr-12 mr-0 mt-6">
              <input type="text" placeholder="Nombre" class="mt-3 px-3 py-3 bg-transparent border-2 shadow-sm border-blue-950 placeholder-blue-900 font-normal focus:outline-none focus:border-white  block w-full sm:text-ms " />
              <input type="email" placeholder="Email" class="mt-3 px-3 py-3 bg-transparent border-2 shadow-sm border-blue-950 placeholder-blue-900 font-normal focus:outline-none focus:border-white  block w-full sm:text-ms " />
