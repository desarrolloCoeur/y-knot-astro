---
export interface Props {
	title: string;
}

const { title } = Astro.props;

import Navbar from '../components/ui/Navbar.astro';
import Footer from '../components/ui/Footer.astro';
import { getLangFromUrl } from '../i18n/utils';
import './global.css';
import Whatsapp from '../components/ui/Whatsapp.astro';

const lang = getLangFromUrl(Astro.url);
---

<!DOCTYPE html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>
		<script type="text/javascript">
			(function() {
				emailjs.init('E41yY70kzlUYTqBa9');
			})();
		</script>
		<!-- Google tag (gtag.js) -->
		<script type="text/partytown" async src="https://www.googletagmanager.com/gtag/js?id=G-D48C028RV2"></script>
		<script type="text/partytown">
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());

			gtag('config', 'G-D48C028RV2');
		</script>
	</head>
	<body class="overflow-x-hidden">
		<Navbar />
		<slot />
		<Footer />
		<Whatsapp />
	</body>
</html>

