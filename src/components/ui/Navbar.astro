---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import NavbarMain from './NavbarMain';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<NavbarMain
  inicio={t("nav.home")}
  
  pesca={t("nav.fishing")}
  linkPesca={t("link.fishing")}

  tours={t("nav.tour")}
  linkTour={t("link.tour")}

  ubicaciones={t("nav.locations")}
  linkLocation={t("link.location")}

  nosotros={t("nav.about")}
  linkAbout={t("link.about")}

  contacto={t("nav.contact")}
  linkContact={t("link.contact")}

  lang={lang}
  client:load
/>

