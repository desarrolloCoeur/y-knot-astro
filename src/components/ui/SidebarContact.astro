---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

---
<div class="bg-slate-100 px-3 py-5 sticky top-2 rounded-md">
    <form class="flex flex-col gap-3 " >
        <h3>{t('contact.title')}</h3>
        <input type="text"  placeholder={t('contact.name')} />
        <input type="date"  placeholder={t('contact.date')}  />
        <input type="email"  placeholder={t('contact.email')} />
        <input type="tel" placeholder={t('contact.phone')} />
        <button type="submit" class="btn-primary mt-5">{t('contact.btn')}</button>
        <a class="btn-primary text-center" href="https://wa.me/+523221351204" target="_blank">{t('contact.whatsapp')}</a>
    </form>
</div>